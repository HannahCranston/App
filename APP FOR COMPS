import math

def polar_conversion():
    x = input("Input the value of x: ")
    y = input("Input the value of y: ")
    floatx = float(x)
    floaty = float(y)
    r = (((floatx**2)+(floaty**2))**(1/2))
    
    if floatx > 0:
        angleRadians = math.atan(floaty/floatx)
    elif floatx < 0 and floaty >= 0:
        angleRadians = (math.atan(floaty/floatx)+(math.pi))
    elif floatx < 0 and floaty < 0:
        angleRadians = (math.atan(floaty/floatx)-(math.pi))
    elif floatx == 0 and floaty > 0:
        angleRadians = ((math.pi)/2)
    elif floatx == 0 and floaty < 0:
        angleRadians = -1*((math.pi)/2)
    else:
        angleRadians = print("Undefined")
        
    question = input("Would you like to convert the radian value into degrees? (y/n): ")
    if question == "y":
        convertedAngle = angleRadians*(180/(math.pi))
        print(r, convertedAngle)
    else:
        print(r, angleRadians)

def cartesian_conversion():
    question2 = input("Is the angle in degrees? (y/n): ")
    if question2 == "y":
        r = input("Please enter the value of r: ")
        rfloat = float(r)
        angleValue = input("Input the angle: ")
        radCon = math.radians(float(angleValue))
        x = rfloat*(math.cos(radCon))
        y = rfloat*(math.sin(radCon))
    else:
        r = input("Please enter the value of r: ")
        rfloat = float(r)
        angleValue = input("Input the angle: ")
        x = rfloat*(math.cos(float(angleValue)))
        y = rfloat*(math.sin(float(angleValue)))
    print(x, y)       

choice = input("Choose a conversion \n 1. Cartesian to Polar coordinates. \n 2. Polar to Cartesian coordinates.\n")
if choice == "1":
    polar_conversion()
elif choice == "2":
    cartesian_conversion()
else:
    print("Those were the only two options...How about picking one of them? >:(")
    
